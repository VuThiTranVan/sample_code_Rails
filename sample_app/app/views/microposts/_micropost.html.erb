<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
    size: Settings.micropost.image_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t("micropost.timestamp_micropost",
      time_post_ago: time_ago_in_words(micropost.created_at)) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("micropost.frm_btn_delete_micropost"),
        micropost, method: :delete, data: {
        confirm: t("micropost.confirm_when_delete_micropost",
        name_micropost: micropost.content)} %>
    <% end %>
  </span>
</li>
