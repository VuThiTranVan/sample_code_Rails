<% load_user_view %>
<div class="stats">
  <%= link_to following_user_path @user do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "users.flow_user.following" %>
  <% end %>
  <%= link_to followers_user_path @user do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
     <%= t "users.flow_user.followers" %>
  <% end %>
</div>
