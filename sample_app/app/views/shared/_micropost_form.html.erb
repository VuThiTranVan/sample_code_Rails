<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost.content_placeholder") %>
  </div>
  <%= f.submit t("micropost.frm_btn_post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png" %>
  </span>
<% end %>
