<% provide :title, t("users.reset_password.title") %>
<h1><%= t "users.reset_password.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email, t("users.frm_lbl_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("users.reset_password.frm_btn_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
