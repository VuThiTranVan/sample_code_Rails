<% provide :title, t("users.reset_password.form_reset_new_password.title") %>
<h1><%= t "users.reset_password.form_reset_new_password.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label  t("users.frm_lbl_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label  t("users.frm_lbl_password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.reset_password.form_reset_new_password.frm_btn_update_password"),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
