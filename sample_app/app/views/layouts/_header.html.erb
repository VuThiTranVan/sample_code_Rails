<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.nav_home"), root_path %></li>
        <li><%= link_to t("layouts.header.nav_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.nav_user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.nav_account"%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.nav_profile"), current_user %></li>
              <li><%= link_to t("layouts.header.nav_setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.nav_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.nav_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
