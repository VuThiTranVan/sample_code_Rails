<% provide :title, t("users.login.title") %>
<h1><%= t "users.login.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label t "users.login.frm_lbl_email" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t "users.login.frm_lbl_password" %>
      <%= link_to t("users.login.frm_link_forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("users.login.span_remember_me") %></span>
      <% end %>

      <%= f.submit t("users.login.frm_btn_login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "users.login.lbl_register_user"%> <%= link_to t("users.login.link_register_user"), signup_path %></p>
  </div>
</div>
